<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/grey"
    android:paddingBottom="5dp"
    android:paddingStart="@dimen/content_rowitem_left_padding"
    android:paddingEnd="0dp">



        <LinearLayout
            android:id="@+id/contentitem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:weightSum="3">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/transparent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/titleTextView"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="5dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"
                    android:layout_weight="1"
                    android:background="@color/transparent"
                    android:text="TextView"
                    android:textColor="@color/colorPrimary"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/transparent"
                android:orientation="horizontal"
                android:paddingEnd="@dimen/content_rowitem_left_padding"
                android:paddingStart="@dimen/content_rowitem_left_padding"
                android:weightSum="2">

                <TextView
                    android:id="@+id/createdDateTextView"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/transparent"
                    android:text="TextView"
                    android:textColor="@color/colorPrimary"

                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/submissionDateTextView"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/transparent"
                    android:text="TextView"
                    android:textColor="@color/colorPrimary"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:paddingEnd="@dimen/content_rowitem_left_padding"
                android:paddingStart="@dimen/content_rowitem_left_padding"
                android:weightSum="1">

                <TextView
                    android:id="@+id/descriptionTextView"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="0dp"
                    android:background="@color/transparent"
                    android:layout_weight="1"
                    android:text="TextView"
                    android:textColor="@color/colorPrimary" />
            </LinearLayout>

        </LinearLayout>

</android.support.constraint.ConstraintLayout>